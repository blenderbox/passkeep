<% title "Projects" %>

<div class="row">
  <div class="span10">
    <h1>Projects</h1>
  </div>
  <div class="span2">
  <%= link_to "create a project", new_project_path, :class => "btn btn-primary", :title => "create a project" %>
  </div>
</div>

<%= page_entries_info @projects, :model => 'project' %>
    <%= will_paginate @projects, :previous_label => '&lt; previous',
    :next_label => 'next &gt;', :separator => ' | ' %>
<ul class="index-list">
  <% @projects.each do |e| %>
  <li><%= truncate(e.name, :length => 54) %>
  <span class="controls"><%= link_to 'view', project_path(e) %> | <%= link_to 'edit', edit_project_path(e) %>
  </span>
  </li>
  <% end %>
</ul>
<%= will_paginate @projects, :previous_label => '&lt; previous',
    :next_label => 'next &gt;', :separator => ' | ' %>
