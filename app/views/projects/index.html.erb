<% title "Projects" %>

<div class="row">
  <div class="span10">
    <h1>Projects</h1>
  </div>
  <div class="span2">
    <%= link_to "add a project", new_project_path, :class => "btn btn-primary", :title => "add a project" %>
  </div>
</div>

<div class="row">
  <div class="span12">
    <div class="entry-info">
      <%= page_entries_info @projects, :model => 'project' %>
    </div>
    <%= will_paginate @projects, :previous_label => '&lt; previous', :next_label => 'next &gt;' %>
  </div>
</div>

<div class="row">
  <div class="span12">
    <ul class="index index-tabs index-stacked">
      <% @projects.each do |e| %>
      <li>
        <%= link_to e.name, edit_project_path(e) %>
      </li>
      <% end %>
    </ul>
    <%= will_paginate @projects, :previous_label => '&lt; previous', :next_label => 'next &gt;' %>
  </div>
</div>
