<head>
    <%= render 'shared/head' %>
    <%= yield :css %>
</head>
<body>
    <div id="layout">
        <%= render 'shared/header' %>
        <div id="content">
            <% if notice %><p class="message notice"><%= notice %></p><% end %>
            <% if alert %><p class="message alert"><%= alert %></p><% end %>
            <%= yield :sub_nav %>
            <section class="clearfix">
            <%= yield %>
            </section>
            <%= yield :sub_section %>
        </div>
    </div>
    <%= render 'shared/footer' %>
<%= render 'shared/javascripts' %>
<%= yield :js %>
</body>
</html>
