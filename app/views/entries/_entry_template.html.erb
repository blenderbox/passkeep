<script type="text/template" id="list-template">
  <li id="<%%= id %>"><a href="/projects/<%%= project_guid %>/entries/<%%= guid %>"><%%= title %></a></li>
</script>
<script type="text/template" id="entry-template">
  <div class="deets">
    <a href="#" class="close" title="close">Ã—</a>
    <p>
    <%%= title %><br/>
    <%% if (username) { %>
    <strong>Username:</strong> <%%= username %><br/>
    <%% } %>
    <%% if (password) { %>
    <strong>Password:</strong> <%%= password %><br/>
    <%% } %>
    <%% if (url) { %>
    <strong>URL:</strong> <%%= url %></p>
    <%% } %>
    <%% if (expiration) { %>
    <strong>Expiration:</strong> <%%= expiration %><br/>
    <%% } %>
    </p>
    <%% if (tags) { %>
    <strong>Tags:</strong>
      <%% _.each(tags, function(tag, idx) { %>
        <%%= (idx !== 0 ? ', ' : '') + tag.name %>
      <%% }); %>
    <%% } %>
    </p>
    <%% if (notes) { %>
    <hr/>
    <p><strong>Notes:</strong> <%%= notes %></p>
    <%% } %>
    <a href="<%%= path %>/edit" class="btn">Edit</a>
  </div>
</script>