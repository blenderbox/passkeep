
<div class="row">
  <div class="span2 offset10">
  <%= link_to "create an entry", new_entry_path, :class => "btn btn-primary", :title => "create an entry" %>
  </div>
</div>

<%= page_entries_info @entries, :model => 'entry' %>
    <%= will_paginate @entries, :previous_label => '&lt; previous',
    :next_label => 'next &gt;', :separator => ' | ' %>
<ul class="index-list">
  <% @entries.each do |e| %>
  <li><%= truncate(e.title, :length => 54) %>
  <span class="controls"><%= link_to 'view', project_entry_path(e.project, e) %>
    | <%= link_to 'edit', edit_project_entry_path(e.project, e) %>
  </span>
  </li>
  <% end %>
</ul>
<%= will_paginate @entries, :previous_label => '&lt; previous',
    :next_label => 'next &gt;', :separator => ' | ' %>