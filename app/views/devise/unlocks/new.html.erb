<% title "Locked out?" %>

<h2>Resend unlock instructions</h2>

<%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <p class="input-prepend">
    <span class="add-on"><i class="icon-envelope"></i></span>
    <%= f.email_field :email, :class => "span5", :type => "email", :placeholder => "email", :required => "required", :autofocus => "autofocus", :tabindex => 1 %> 
  </p>

  <p class="form-actions">
    <button type="submit" class="btn btn-primary">Send unlock instuctions</button>
    <%= render "links" %>
  </p>
<% end %>