<%= form_for user, :html => { :autocomplete => :off, :multipart => true } do |f| %>
  <%= render 'shared/errors', :m => user %>
  <p>
      <%= f.text_field :email, :required => 'required' %></p>
  <p>
      <%= f.text_field :first_name, :required => 'required' %></p>
  <p>
      <%= f.text_field :last_name, :required => 'required' %></p>
  <p><%= f.label :password %> <% if user.new_record? %><span class="required">*</span><% end %><br />
    <%= f.password_field :password %></p>
  <p><%= f.label :password_confirmation %> <% if user.new_record? %><span class="required">*</span><% end %><br />
    <%= f.password_field :password_confirmation %></p>
  <p>
    <%= f.label :team_tokens, "Teams" %><br />
    <%= f.text_field :team_tokens, "data-pre" => user.teams.map(&:attributes).to_json %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= content_for :js do %>
  <%= javascript_include_tag 'libs/jquery.tokeninput', 'app/users' %>
<% end %>