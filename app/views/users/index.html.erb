<%= link_to "create an entry", new_entry_path, :class => "button", :title => "create an entry"%>
<%= page_entries_info @entries, :entry_name => 'entry' %>
    <%= will_paginate @entries, :previous_label => '&lt; previous',
    :next_label => 'next &gt;', :separator => ' | ' %>
<ul class="index-list">
  <% @entries.each do |e| %>
  <li><%= truncate(e.title, :length => 54) %>
  <span class="controls"><%= link_to 'view', entry_path(e) %>
    | <%= link_to 'edit', edit_entry_path(e) %>
    | <%= link_to 'delete', entries_confirm_path(e) %>
  </span>
  </li>
  <% end %>
</ul>
<%= will_paginate @entries, :previous_label => '&lt; previous',
    :next_label => 'next &gt;', :separator => ' | ' %>