<% title "Teams" %>

<h1>Teams</h1>

<div class="row">
  <p class="span2 offset10">
<%= link_to "create a team", new_team_path, :class => "btn btn-primary", :title => "create a team" %>
  </p>
</div>
<%= page_entries_info @teams, :model => 'team' %>
    <%= will_paginate @teams, :previous_label => '&lt; previous',
    :next_label => 'next &gt;', :separator => ' | ' %>
<ul class="index-list">
  <% @teams.each do |e| %>
  <li><%= truncate(e.name, :length => 54) %>
  <span class="controls"><%= link_to 'view', team_path(e) %> | <%= link_to 'edit', edit_team_path(e) %>
  </span>
  </li>
  <% end %>
</ul>
<%= will_paginate @teams, :previous_label => '&lt; previous',
    :next_label => 'next &gt;', :separator => ' | ' %>
<div class="row">
  <p class="span2 offset10">
<%= link_to "create a team", new_team_path, :class => "btn btn-primary", :title => "create a team" %>
  </p>
</div>