<%= link_to "create a team", new_team_path, :class => "button", :title => "create an team"%>
<%= page_entries_info @teams, :entry_name => 'team' %>
    <%= will_paginate @teams, :previous_label => '&lt; previous',
    :next_label => 'next &gt;', :separator => ' | ' %>
<ul class="index-list">
  <% @teams.each do |e| %>
  <li><%= truncate(e.name, :length => 54) %>
  <span class="controls"><%= link_to 'view', team_path(e) %>
    | <%= link_to 'edit', edit_team_path(e) %>
    | <%= link_to 'delete', confirm_destroy_team_path(e) %>
  </span>
  </li>
  <% end %>
</ul>
