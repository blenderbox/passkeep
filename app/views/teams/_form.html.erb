<%= form_for team, :html => {  } do |f| %>
<div class="well">
  <%= render 'shared/errors', :m => team %>
  <p>
    <%= f.text_field :name, :class => 'span4 required', :placeholder => 'name', :required => 'required' %>
  </p>
</div>
<div class="row">
  <div class="span6">
    <h4>Team members</h4>
    <div class="well">
      <ul id="team-list" class="team-list"><% @team.users.each do |u| %><li><a class="close" title="remove">&times;</a> <%= u.full_name %></li><% end %></ul>
      <input id="team-search" type="search" placeholder="Search for a user" />
      <%= f.text_field :user_tokens %>
    </div>
  </div>
  <div class="span6">
    <h4>Projects</h4>
    <div class="well">
      <ul id="project-list" class="team-list"><% @team.projects.each do |p| %><li><a class="close" title="remove">&times;</a> <%= p.name %> </li><% end %></ul>
      <input id="project-search" type="search" placeholder="Search for a project" />
      <%= f.text_field :project_tokens %>
    </div>
  </div>
</div>
  <p class="form-actions">
    <button class="btn btn-primary">Save</button>
    <%= link_to "Cancel", teams_path, :class => 'btn' %>
    <%= link_to '<i class="icon-trash icon-white"></i> Delete'.html_safe, confirm_destroy_team_path(team), :class => 'btn btn-danger' unless team.new_record? %>
  </p>
<% end %>
<%= content_for :js do %>
  <script>USER_SEARCH_URL='<%= search_users_path %>', PROJECT_SEARCH_URL='<%= search_projects_path %>';</script>
  <%= javascript_include_tag 'libs/jquery-ui-1.8.17.custom.min', 'app/teams' %>
<% end %>