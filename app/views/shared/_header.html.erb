<div class="navbar">
  <div class="navbar-inner">
    <div class="container" style="width: auto;">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to "Passkeep", root_path, :id => "logo", :class => 'brand' %>
      <% if user_signed_in? %>
      <div class="nav-collapse">
        <ul class="nav">
          <li<%= on_class entries_path, new_entry_path %>><%= link_to "Secrets", entries_path %></li>
          <li<%= on_class new_entry_path %>><%= link_to "Add a secret", new_entry_path %></li>
          <li<%= on_class teams_path %>><%= link_to "Teams", teams_path %></li>
        </ul>
        <ul class="nav pull-right">
          <li>
          <form class="navbar-search pull-left" action="">
            <input type="search" id="search" class="search-query span3" placeholder="Search entries" title="shift+l to focus" x-webkit-speech />
          </form>
          </li>
          <li class="divider-vertical"></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= gravatar_image_tag(current_user.email, :alt => current_user.full_name, :gravatar => { :size => 20 }, :class => 'ava') %> <%= current_user.full_name %> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to('<i class="icon-edit"></i> Edit your account'.html_safe, edit_user_path(current_user)) %></li>
              <% if can? :manage, User %><li><%= link_to('<i class="icon-pencil"></i> Users'.html_safe, users_path) %></li><% end %>
              <% if can? :manage, EntryImport %><li><%= link_to('Import Secrets'.html_safe, new_entry_import_path) %></li><% end %>
              <li class="divider"></li>
              <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
            </ul>
          </li>
        </ul>
      </div><!-- /.nav-collapse -->
      <% end %>
    </div>
  </div><!-- /navbar-inner -->
</div><!-- /navbar -->
