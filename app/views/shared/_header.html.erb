<div class="navbar">
  <div class="navbar-inner">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to "Passkeep", root_path, :id => "logo", :class => 'brand' %>
      <% if user_signed_in? %>
      <div class="nav-collapse">
        <ul class="nav">
          <li<%= on_class entries_path, new_entry_path %>><%= link_to "Secrets", entries_path %></li>
          <li<%= on_class new_entry_path %>><%= link_to "Add a secret", new_entry_path %></li>
          <li<%= on_class teams_path %>><%= link_to "Teams", teams_path %></li>
        </ul>
        <ul class="nav pull-right">
          <li>
          <div class="navbar-search pull-left" action="">
